<!-- Page Content -->
<div class="container-narrow">

  <!-- Page Header -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= @report.title %></h1>
    </div>
  </div>
  <!-- /.row -->

  <p>
    <%= image_tag @report.image.url(:report, :normal), :style => "width:100%" %><br>
  </p>

  <p style="margin-top: 3em">
    <%= @report.content %>
  </p>
  <p style="margin-top: 3em">
    <span><%= image_tag(@report.user.icon_image_url, :class => "img-circle", :width => 25, :height => 25 ) if @report.user %></span>
    <span><%= @report.user.name if @report.user %></span>
    <%= @report.user.description %>
  </p>
  <p class="bg-warning" style="padding: 2em; margin-top: 3em">
    <%= @report.spot.name if @report.spot %>(<%= @report.spot.city.name if @report.spot %>)<br>
    <%= @report.spot.display_address if @report.spot %><br>
    <%= link_to 'yelp page', @report.spot.yelp_url, :target=>["_blank"] if @report.spot %><br>
  </p>

  <% if current_user.right == 1 %>
  <p>
    <%= link_to 'Delete', report_path(@report), :method => :delete, :confirm => 'Are you sure?' %>
  </p>
  <% end %>

</div>
<!-- /.container -->