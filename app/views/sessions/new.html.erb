<!-- Page Content -->
<div class="container">

  <!-- Page Header -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Log in</h1>
    </div>
  </div>
  <!-- /.row -->

  <p  class="alert alert-error"><%= notice %></p>

  <%= form_tag login_path, :method => :post, :html => { :class => "form-horizontal" } do %>
  <div class="form-group">
    <%= text_field_tag :email, nil, { :class => "form-control", :placeholder => "メールアドレス" } %>
  </div>

  <div class="form-group">
    <%= password_field_tag :password, nil, { :class => "form-control", :placeholder => "パスワード" } %>
  </div>

  <div class="form-group checkbox">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-default">Log in</button>
  </div>
  <% end %>

</div>
<!-- /.container -->