<%= form_for @user, :url => { :action => 'update_password' }, :html => { :class => "form-horizontal" } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.password_field :current_password, { :class => "form-control", :placeholder => "現在のパスワード" } %>
    </div>

    <div class="form-group">
      <%= f.password_field :new_password, { :class => "form-control", :placeholder => "新しいパスワード" } %>
    </div>

    <div class="form-group">
      <%= f.password_field :new_password_confirmation, { :class => "form-control", :placeholder => "新しいパスワード確認" } %>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-default">Send</button>
    </div>
<% end %>
